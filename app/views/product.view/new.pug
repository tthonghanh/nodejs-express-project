extends ../layout

block content
  form.form-group(method='POST' action='/products')
    .row
      .col-6.mx-auto
        label(for='') Product Name
        input#productName.form-control(type='text' name='productName' placeholder='Name' aria-describedby='helpId')
    .row
      .col-6.mx-auto
        label(for='') Product Image
        input#imgLink.form-control(type='text' name='imgLink' placeholder='Image' aria-describedby='helpId')
    .row
      .col-6.mx-auto
        label(for='') Category
        select#categoryId.form-control(name='categoryId')
          each category in categories
            option(value=category.id) #{category.name}
    .row
      .col-6.mx-auto
        label(for='') Original Price
        input#originalPrice.form-control(type='text' name='originalPrice' placeholder='Original Price' aria-describedby='helpId')
    .row
      .col-6.mx-auto
        label(for='') Actual Price
        input#price.form-control(type='text' name='price' placeholder='Actual Price' aria-describedby='helpId')
    .row
      .col-6.mx-auto
        label(for='') Discription
        textarea#description.form-control(type='text' name='description' placeholder='Discription' aria-describedby='helpId')
    .row
      .col-6.mx-auto
        label(for='') Number of feedback
        input#feedback.form-control(type='text' name='feedback' placeholder='Discription' aria-describedby='helpId')

        button.btn.btn-primary(type="submit") Submit