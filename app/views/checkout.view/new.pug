  // Checkout Start
  .container-fluid.pt-5
    form(method="POST" action="/checkouts")
      .row.px-xl-5
        .col-lg-8
          .mb-4
            h4.font-weight-semi-bold.mb-4 Billing Address
            .row
              .col-md-6.form-group
                label First Name
                input.form-control(type='text' placeholder='John' name="firstName")
              .col-md-6.form-group
                label Last Name
                input.form-control(type='text' placeholder='Doe' name="lastName")
              .col-md-6.form-group
                label E-mail
                input.form-control(type='text' placeholder='example@email.com' name="email")
              .col-md-6.form-group
                label Mobile No
                input.form-control(type='text' placeholder='+123 456 789' name="mobileNo")
              .col-md-6.form-group
                label Address Line 1
                input.form-control(type='text' placeholder='123 Street' name="address1")
              .col-md-6.form-group
                label Address Line 2
                input.form-control(type='text' placeholder='123 Street' name="address2")
              .col-md-6.form-group
                label Country
                input.form-control(type='text' placeholder='United State' name="country")
              .col-md-6.form-group
                label City
                input.form-control(type='text' placeholder='New York' name="city")
              .col-md-6.form-group
                label State
                input.form-control(type='text' placeholder='New York' name="state")
              .col-md-6.form-group
                label ZIP Code
                input.form-control(type='text' placeholder='123' name="zipCode")
        .col-lg-4
          .card.border-secondary.mb-5
            .card-header.bg-secondary.border-0
              h4.font-weight-semi-bold.m-0 Order Total
            .card-body
              h5.font-weight-medium.mb-3 Products
              each cartItem in cartItems
                .d-flex.justify-content-between
                  p #{cartItem.product.productName}
                  p $#{cartItem.product.price * cartItem.quantity}
              hr.mt-0
              .d-flex.justify-content-between.mb-3.pt-1
                h6.font-weight-medium Subtotal
                - let total = 0;
                - for (let i = 0; i < cartItems.length; i++) {
                - total += cartItems[i].product.price * cartItems[i].quantity;
                - }
                  h6.font-weight-medium $#{total}
                  input(type="hidden" value=+total name="totalInvoicement")
              .d-flex.justify-content-between
                h6.font-weight-medium Shipping
                h6.font-weight-medium $10
            .card-footer.border-secondary.bg-transparent
              .d-flex.justify-content-between.mt-2
                h5.font-weight-bold Total
                h5.font-weight-bold $#{total + 10}
          .card.border-secondary.mb-5
            .card-header.bg-secondary.border-0
              h4.font-weight-semi-bold.m-0 Payment
            .card-body
              label.custom-control.custom-radio.d-block
                  input#paypal.custom-control-input(type='radio' name='payment' value="Paypal")
                  .custom-control-label(for='paypal') Paypal
              label.custom-control.custom-radio.d-block
                  input#directcheck.custom-control-input(type='radio' name='payment' value="Direct Check")
                  .custom-control-label(for='directcheck') Direct Check
              label.custom-control.custom-radio.d-block
                  input#banktransfer.custom-control-input(type='radio' name='payment' value="Bank Transfer")
                  .custom-control-label(for='banktransfer') Bank Transfer
            .card-footer.border-secondary.bg-transparent
              button.btn.btn-lg.btn-block.btn-primary.font-weight-bold.my-3.py-3(type="submit") Place Order
